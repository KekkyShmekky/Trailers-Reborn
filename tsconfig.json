{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [ "ESNext" ],
		"types": [
			"@glua-ts/types/typings/garrysmod",
			"lua-types/5.2",
			"./src/typings"
		],
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./lua",
		"declaration": false,
		"sourceMap": false,
		"skipLibCheck": true, // FAST AF BOI
		"strict": true,
		"removeComments": true
	},
	"tstl": {
		"luaTarget": "5.2", // 5.2
		//"luaBundleEntry": "src/main.ts",
		//"luaBundle": "lob",
		"noHeader": true,
		// if true, BadCoderZ is broken
		"sourceMapTraceback": false,
		"luaLibImport": "inline"
	},
	"exclude": [
		"node_modules"
	]
}
