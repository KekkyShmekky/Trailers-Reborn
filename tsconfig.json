{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [ "ES2020" ],
		"types": [
			"lua-types/5.2",
			"./src/typings",
			"@glua-addon-types/flex/index",
			"@glua-addon-types/glua-types/typings/garrysmod"
		],
		"module": "ES2020", // commonjs
		"charset": "UTF8",
		"rootDir": "./src",
		"outDir": "./lua",
		"declaration": false,
		"sourceMap": false,
		"skipLibCheck": true, // FAST AF BOI
		//"allowSyntheticDefaultImports": true,
		//"esModuleInterop": true, // import 
		"strict": true,
		"removeComments": true
	},
	"tstl": {
		"luaTarget": "5.2", // 5.2
		//"luaBundleEntry": "src/autorun/server/simfphys_trailers_reborn.ts",
		//"luaBundle": "lob",
		"noHeader": true,
		// if true, BadCoderZ is broken
		"sourceMapTraceback": false,
		"luaLibImport": "inline"
		//"luaLibImport": "require" // for bundle
	},
	"exclude": [
		"node_modules"
	]
}
